<p id="notice"><%= notice %></p>

<h1>Listing Exhibits</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Climate</th>
      <th>Year opened</th>
      <th>Animals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibits.each do |exhibit| %>
      <tr>
        <td><%= exhibit.name %></td>
        <td><%= exhibit.climate %></td>
        <td><%= exhibit.year_opened %></td>
        <td><%= exhibit.animal_names.join(", ") %></td>
        <td><%= link_to 'Show', exhibit %></td>
        <td><%= link_to 'Edit', edit_exhibit_path(exhibit) %></td>
        <td><%= link_to 'Destroy', exhibit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

